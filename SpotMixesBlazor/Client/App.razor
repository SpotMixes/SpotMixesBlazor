<LoadingScreen>
    <Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="@true">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData">
                <NotAuthorized>
                    <LayoutView Layout="@typeof(AuthenticationLayout)">
                        <NotAuthorizerCustom/>
                    </LayoutView>
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(AuthenticationLayout)">
                <NotFoundCustom/>
            </LayoutView>
        </NotFound>
    </Router>
</LoadingScreen>
@page "/pago-pendiente"
@layout AuthenticationLayout
@inject IJSRuntime _jsRuntime

<div class="misc-wrapper">
    <a class="brand-logo" href="/">
        <img src="public/brand/SpotMixes-Logo-TypographyOnRight.svg" alt="Logo SpotMixes" style="height: 28px;"/>
    </a>
    <div class="misc-inner p-2 p-sm-3">
        <div class="w-100 text-center">
            <h2 class="mb-1">!Pago pendiente!🤔</h2>
            <p class="mb-2">
                👋 Hola, tienes un pago pendiente. Debe hacerse lo antes posible.
            </p>
            <a class="btn btn-primary mb-2 btn-sm-block" href="/">
                Regresar al inicio
            </a>
        </div>
        <div class="w-100 text-center">
            <img class="img-fluid" src="public/page/simple/payment-pendient.svg" alt="exit"/>
        </div>
    </div>
</div>

@code
{
    protected override async Task OnInitializedAsync()
    {
        await _jsRuntime.InvokeVoidAsync("includeCss", "src/css/pages/page-misc.min.css", "page-misc");
    }
}
@inject IJSRuntime _jsRuntime

@ChildContent

@code {
    [Parameter]
    public RenderFragment ChildContent  { get; set; }
    
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await _jsRuntime.InvokeVoidAsync("HideLoader");
        }
    }
}
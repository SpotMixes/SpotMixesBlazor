@inject IJSRuntime _jsRuntime

<!-- Error page-->
<div class="misc-wrapper">
    <a class="brand-logo" href="/">
        <img src="public/brand/SpotMixes-Logo-TypographyOnRight.svg" alt="Logo SpotMixes" style="height: 28px;"/>
    </a>
    <div class="misc-inner p-2 p-sm-3">
        <div class="w-100 text-center">
            <h2 class="mb-1">404 - Página no encontrada 🕵🔎</h2>
            <p class="mb-2">Oops! 😖 La dirección URL solicitada no se encontró en este servidor.</p>
            <a class="btn btn-primary mb-2 btn-sm-block" href="/">
                Regresar al inicio
            </a>
            <img class="img-fluid" src="public/page/simple/error-dark.svg" alt="Error page"/>
        </div>
    </div>
</div>
<!-- / Error page-->

@code
{
    protected override async Task OnInitializedAsync()
    {
        await _jsRuntime.InvokeVoidAsync("includeCss", "src/css/pages/page-misc.min.css", "page-misc");
    }
}
